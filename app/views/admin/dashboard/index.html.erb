<div class="max-w-6xl mx-auto px-6 py-10">
  <h1 class="text-2xl font-semibold mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-gray-500 text-sm">Total Quizzes</p>
      <p class="text-3xl font-bold"><%= @quizzes_count %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-gray-500 text-sm">Published Quizzes</p>
      <p class="text-3xl font-bold"><%= @published_quizzes %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-gray-500 text-sm">Submissions</p>
      <p class="text-3xl font-bold"><%= @submissions_count %></p>
    </div>
  </div>
</div>
