<div class="max-w-6xl mx-auto px-6 py-10">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-semibold">Questions</h1>
      <p class="text-gray-500 text-sm"><%= @quiz.title %></p>
    </div>

    <%= link_to "Add Question", new_admin_quiz_question_path(@quiz), class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-500" %>
  </div>

  <div class="bg-white rounded-lg shadow divide-y">
    <% @questions.each_with_index do |question, index| %>
      <div class="p-4 flex justify-between items-start">
        <div>
          <p class="font-medium">
            <%= index + 1 %>. <%= question.question_text %>
          </p>
          <p class="text-sm text-gray-500">
            Type: <%= question.question_type.humanize %>
          </p>
        </div>

        <div class="flex space-x-3">
          <%= link_to "Edit", edit_admin_quiz_question_path(@quiz, question), class: "text-indigo-600 text-sm" %>

          <%= button_to "Delete", admin_quiz_question_path(@quiz, question), method: :delete, data: { confirm: "Delete this question?" }, form: { class: "inline" }, class: "text-red-600 text-sm bg-transparent p-0 border-0 cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
