<%= form_with model: [:admin, @quiz], local: true do |f| %>
  <div class="space-y-6">

    <div>
      <%= f.label :title, class: "block font-medium mb-1" %>
      <%= f.text_field :title, class: "w-full border rounded-md p-2", placeholder: "Quiz title" %>
    </div>

    <div>
      <%= f.label :description, class: "block font-medium mb-1" %>
      <%= f.text_area :description, rows: 4, class: "w-full border rounded-md p-2", placeholder: "Short description for users" %>
    </div>

    <div class="flex items-center space-x-2">
      <%= f.check_box :published %>
      <%= f.label :published, "Published" %>
    </div>

    <div class="flex space-x-3">
      <%= f.submit "Save Quiz", class: "bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-500" %>

      <%= link_to "Cancel", admin_quizzes_path, class: "px-6 py-2 rounded-md border" %>
    </div>

  </div>
<% end %>
