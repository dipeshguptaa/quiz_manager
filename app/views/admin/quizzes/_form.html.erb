<div class="bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden">
  <%= form_with model: [:admin, @quiz], local: true, class: "p-8" do |f| %>
    <div class="space-y-8">

      <% if @quiz.errors.any? %>
        <div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-4">
          <div class="flex items-start">
            <svg class="h-5 w-5 text-red-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10A8 8 0 11 2 10a8 8 0 0116 0zm-8-4a1 1 0 00-.993.883L9 7v3a1 1 0 001.993.117L11 10V7a1 1 0 00-1-1zm0 7a1.25 1.25 0 100-2.5 1.25 1.25 0 000 2.5z" clip-rule="evenodd"/>
            </svg>

            <div class="ml-3">
              <h3 class="text-sm font-semibold text-red-800">
                Please fix the following errors:
              </h3>

              <ul class="mt-2 list-disc list-inside text-sm text-red-700 space-y-1">
                <% @quiz.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
  
      <div class="space-y-2">
        <%= f.label :title, class: "block text-sm font-semibold text-slate-700" do %>
          Quiz Title
          <span class="text-red-500">*</span>
        <% end %>
        <%= f.text_field :title, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all text-slate-900", placeholder: "Enter quiz title...", required: true %>
        <p class="text-xs text-slate-500 mt-1">Choose a clear, descriptive title for your quiz</p>
      </div>

      <div class="space-y-2">
        <%= f.label :description, class: "block text-sm font-semibold text-slate-700" do %>
          Description
          <span class="text-red-500">*</span>
        <% end %>
        <%= f.text_area :description, rows: 5, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-none text-slate-900", placeholder: "Provide a brief description of what this quiz covers...", required: true %>
        <p class="text-xs text-slate-500 mt-1">Help participants understand what to expect from this quiz</p>
      </div>

      <div class="bg-slate-50 border border-slate-200 rounded-lg p-6">
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :published, class: "w-5 h-5 text-indigo-600 border-slate-300 rounded focus:ring-2 focus:ring-indigo-500 cursor-pointer" %>
          </div>
          <div class="ml-3">
            <%= f.label :published, class: "font-semibold text-slate-900 cursor-pointer" do %>
              Publish Quiz
            <% end %>
            <p class="text-sm text-slate-600 mt-1">Make this quiz visible and accessible to participants. Unpublished quizzes remain in draft mode.</p>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-end gap-3 pt-6 border-t border-slate-200">
        <%= link_to "Cancel", admin_quizzes_path, class: "px-6 py-3 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-all" %>
        <%= f.submit (@quiz.persisted? ? "Update Quiz" : "Create Quiz"), class: "px-6 py-3 text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-lg hover:from-indigo-700 hover:to-indigo-800 shadow-lg hover:shadow-xl transition-all cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
