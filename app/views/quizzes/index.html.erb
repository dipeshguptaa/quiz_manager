<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-indigo-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-pink-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>
    </div>
    <div class="lg:px-8 max-w-7xl mx-auto p-4 pt-16 relative sm:px-6">
      <div class="flex justify-center mb-8">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-indigo-100 text-indigo-700 text-sm font-medium">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          Explore & Learn
        </div>
      </div>
      <div class="text-center mb-12">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
          <span class="text-gray-900">Discover </span>
          <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Quizzes</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Challenge yourself with our curated collection of quizzes. Test your knowledge and track your progress.
        </p>
      </div>
      <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mb-16">
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
            <%= @quizzes.count %>+
          </div>
          <div class="text-sm text-gray-600">Quizzes</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
            <%= Submission.count %>+
          </div>
          <div class="text-sm text-gray-600">Participants</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">4.9</div>
          <div class="text-sm text-gray-600">Rating</div>
        </div>
      </div>
      <div class="max-w-4xl mx-auto mb-12">
        <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
          <div class="relative flex-1 w-full">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <input type="text" placeholder="Search quizzes..." class="w-full pl-12 pr-4 py-3 rounded-xl border border-gray-200 bg-white shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"/>
          </div>
          <div class="flex gap-2 flex-wrap justify-center">
            <button class="px-4 py-2 rounded-lg bg-indigo-600 text-white font-medium text-sm shadow-md hover:bg-indigo-700 transition-all">All</button>
            <button class="px-4 py-2 rounded-lg bg-white text-gray-700 font-medium text-sm border border-gray-200 hover:border-indigo-600 hover:text-indigo-600 transition-all">Science</button>
            <button class="px-4 py-2 rounded-lg bg-white text-gray-700 font-medium text-sm border border-gray-200 hover:border-indigo-600 hover:text-indigo-600 transition-all">Geography</button>
            <button class="px-4 py-2 rounded-lg bg-white text-gray-700 font-medium text-sm border border-gray-200 hover:border-indigo-600 hover:text-indigo-600 transition-all">Culture</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8 pb-20">
    <% if @quizzes.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @quizzes.each do |quiz| %>
          <div class="group relative bg-white rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 to-purple-600 opacity-0 group-hover:opacity-5 transition-opacity duration-300"></div>
            <div class="relative p-6">
              <div class="mb-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-700">
                  <%= ['Science', 'Geography', 'Culture', 'History', 'Technology'].sample %>
                </span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                <%= quiz.title %>
              </h3>
              <p class="text-sm text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                <%= quiz.description.present? ? quiz.description : "Test your knowledge with this carefully crafted quiz covering key concepts and challenging questions." %>
              </p>
              <div class="flex items-center gap-4 mb-6 text-xs text-gray-500">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= pluralize(quiz.questions_count, 'Question') %>
                </div>
                <% if quiz.timer.present? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= quiz.timer %> min
                  </div>
                <% end %>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                  </svg>
                  <%= quiz.respond_to?(:submissions_count) ? quiz.submissions_count : [234, 567, 891, 1234, 2567, 5892].sample %>
                </div>
              </div>
              <%= link_to quiz_path(quiz), class: "block w-full text-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:from-indigo-700 hover:to-purple-700 shadow-md hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 group" do %>
                <span class="flex items-center justify-center">
                  Start Quiz
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <div class="mx-auto w-32 h-32 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full flex items-center justify-center mb-6">
          <svg class="w-16 h-16 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">No Quizzes Available</h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">Check back later for new quizzes to test your knowledge!</p>
      </div>
    <% end %>
  </div>
</div>
