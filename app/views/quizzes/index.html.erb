<div class="max-w-6xl mx-auto px-6 py-10">
  <h1 class="text-3xl font-semibold mb-8">Available Quizzes</h1>

  <div class="grid gap-6 md:grid-cols-2">
    <% @quizzes.each do |quiz| %>
      <div class="bg-white shadow-sm rounded-lg p-6 hover:shadow-md transition">
        <h2 class="text-xl font-medium mb-2"><%= quiz.title %></h2>
        <p class="text-gray-600 mb-4"><%= quiz.description %></p>

        <%= link_to "Take Quiz", quiz_path(quiz), class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
