<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <%= link_to quizzes_path, class: "inline-flex items-center text-sm font-medium text-slate-600 hover:text-slate-900 transition-colors mb-6" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Quizzes
    <% end %>
    <div class="bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-8 py-6">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="text-3xl font-bold text-white mb-2"><%= @quiz.title %></h1>
            <p class="text-indigo-100 text-base leading-relaxed"><%= @quiz.description %></p>
          </div>
          <div class="flex-shrink-0 ml-6">
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-4 py-3 text-center">
              <div class="text-2xl font-bold text-white"><%= @quiz.questions.count %></div>
              <div class="text-xs text-indigo-100 font-medium">Questions</div>
            </div>
          </div>
        </div>
      </div>
      <div class="px-8 py-6 bg-blue-50 border-b border-blue-200">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-medium text-blue-900">Instructions</p>
            <p class="text-sm text-blue-700 mt-1">Answer all questions to the best of your ability. Select one option for multiple choice questions. Once submitted, you'll receive your results.</p>
          </div>
        </div>
      </div>
    </div>
    <%= form_with url: submissions_path, method: :post, local: true, class: "space-y-6" do %>
      <%= hidden_field_tag :quiz_id, @quiz.id %>
      <% @quiz.questions.each_with_index do |question, index| %>
        <div class="bg-white rounded-xl shadow-lg border border-slate-200 overflow-hidden">
          <div class="bg-slate-50 px-6 py-4 border-b border-slate-200">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-indigo-600 text-white rounded-lg flex items-center justify-center font-bold">
                <%= index + 1 %>
              </div>
              <div class="flex-1">
                <p class="text-lg font-semibold text-slate-900"><%= question.question_text %></p>
                <div class="flex items-center gap-2 mt-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= question.mcq? ? 'bg-blue-100 text-blue-700' : question.true_false? ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                    <%= question.question_type.humanize %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="p-6">
            <% if question.mcq? || question.true_false? %>
              <div class="space-y-3">
                <% question.options.each do |option| %>
                  <label class="flex items-start p-4 bg-slate-50 border-2 border-slate-200 rounded-lg cursor-pointer hover:border-indigo-300 hover:bg-indigo-50/50 transition-all group">
                    <div class="flex items-center h-5 mt-0.5">
                      <%= radio_button_tag "answers[#{question.id}]", option.id, false, class: "w-5 h-5 text-indigo-600 border-slate-300 focus:ring-2 focus:ring-indigo-500 cursor-pointer" %>
                    </div>
                    <div class="ml-4 flex-1">
                      <span class="text-slate-900 font-medium group-hover:text-indigo-700 transition-colors"><%= option.content %></span>
                    </div>
                  </label>
                <% end %>
              </div>
            <% elsif question.short_text? %>
              <%= text_area_tag "answers[#{question.id}]", "", class: "w-full px-4 py-3 border-2 border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all resize-none text-slate-900", rows: 4, placeholder: "Type your answer here..." %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="bg-white rounded-xl shadow-lg border border-slate-200 p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center text-sm text-slate-600">
            <svg class="w-5 h-5 mr-2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Make sure all questions are answered before submitting
          </div>
          <div class="flex items-center gap-3">
            <%= link_to "Cancel", quizzes_path, class: "px-6 py-3 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-all" %>
            <%= submit_tag "Submit Quiz", class: "px-8 py-3 text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-lg hover:from-indigo-700 hover:to-indigo-800 shadow-lg hover:shadow-xl transition-all cursor-pointer" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>