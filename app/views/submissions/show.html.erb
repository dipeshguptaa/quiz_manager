<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <%= link_to quizzes_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-800 transition-colors font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Quizzes
      <% end %>
    </div>

    <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8 border border-gray-100">
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6">
        <h1 class="text-3xl font-bold text-white mb-2">Quiz Complete! ðŸŽ‰</h1>
        <p class="text-indigo-100"><%= @submission.quiz.title %></p>
      </div>
      
      <div class="p-8">
        <div class="flex items-center justify-between flex-wrap gap-6">
          <div class="flex items-center space-x-6">
            <div class="relative w-32 h-32">
              <svg class="w-32 h-32 transform -rotate-90">
                <circle cx="64" cy="64" r="56" stroke="#e5e7eb" stroke-width="8" fill="none"/>
                <circle cx="64" cy="64" r="56" stroke="<%= @submission.score_color %>"
                  stroke-width="8" fill="none" stroke-dasharray="<%= 2 * Math::PI * 56 %>" stroke-dashoffset="<%= 2 * Math::PI * 56 * (1 - @submission.percentage_score / 100.0) %>" stroke-linecap="round" class="transition-all duration-1000 ease-out"/>
              </svg>
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-3xl font-bold <%= @submission.percentage_score >= 70 ? 'text-green-600' : @submission.percentage_score >= 50 ? 'text-amber-600' : 'text-red-600' %>">
                  <%= @submission.percentage_score.round %>%
                </span>
              </div>
            </div>
            
            <div>
              <div class="text-5xl font-bold text-gray-900 mb-1">
                <%= @submission.score %><span class="text-2xl text-gray-400">/<%= @submission.total_questions %></span>
              </div>
              <p class="text-gray-600 text-lg">Correct Answers</p>
            </div>
          </div>

          <% performance = @submission.performance_level %>
          <div class="text-center">
            <div class="inline-flex items-center px-6 py-3 rounded-full text-lg font-semibold <%= "bg-#{performance[:color]}-100 text-#{performance[:color]}-800" %>">
              <%= performance[:label] %>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-4 mt-8 pt-6 border-t border-gray-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-green-600"><%= @submission.answers.where(is_correct: true).count %></div>
            <div class="text-sm text-gray-600 mt-1">Correct</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-red-600"><%= @submission.answers.where(is_correct: false).count %></div>
            <div class="text-sm text-gray-600 mt-1">Incorrect</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-indigo-600"><%= @submission.total_questions %></div>
            <div class="text-sm text-gray-600 mt-1">Total</div>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        Review Your Answers
      </h2>

      <div class="space-y-6">
        <% @submission.answers.includes(:question, :option, question: :options).each_with_index do |answer, index| %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden border-l-4 <%= answer.is_correct ? 'border-green-500' : 'border-red-500' %> hover:shadow-lg transition-shadow">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <div class="flex items-center mb-2">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-700 font-semibold text-sm mr-3">
                      <%= index + 1 %>
                    </span>
                    <h3 class="text-lg font-semibold text-gray-900">
                      <%= answer.question.question_text %>
                    </h3>
                  </div>

                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700 ml-11">
                    <%= answer.question.question_type.titleize %>
                  </span>
                </div>

                <div class="ml-4">
                  <% if answer.is_correct %>
                    <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                      <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                      <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="ml-11 space-y-3">
                <div class="flex items-start">
                  <div class="min-w-0 flex-1">
                    <p class="text-sm font-medium text-gray-500 mb-1">Your Answer:</p>
                    <div class="flex items-center">
                      <div class="flex-shrink-0 mr-2">
                        <% if answer.is_correct %>
                          <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                          </svg>
                        <% else %>
                          <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                          </svg>
                        <% end %>
                      </div>
                      <p class="text-base <%= answer.is_correct ? 'text-green-700 font-semibold' : 'text-red-700 font-medium' %>">
                        <% if answer.option.present? %>
                          <%= answer.option.content %>
                        <% elsif answer.answer_text.present? %>
                          <%= answer.answer_text %>
                        <% else %>
                          <span class="italic text-gray-400">No answer provided</span>
                        <% end %>
                      </p>
                    </div>
                  </div>
                </div>

                <% unless answer.is_correct %>
                  <div class="flex items-start bg-green-50 rounded-lg p-3 border border-green-200">
                    <svg class="w-5 h-5 text-green-600 mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium text-green-800 mb-1">Correct Answer:</p>
                      <p class="text-base text-green-900 font-semibold">
                        <% if answer.question.correct_option.present? %>
                          <%= answer.question.correct_option.content %>
                        <% else %>
                          Not available
                        <% end %>
                      </p>
                    </div>
                  </div>
                <% end %>

                <% if answer.question.question_type == 'mcq' && answer.question.options.any? %>
                  <div class="mt-4 pt-4 border-t border-gray-200">
                    <p class="text-sm font-medium text-gray-500 mb-2">All Options:</p>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                      <% answer.question.options.each do |opt| %>
                        <% is_user_answer = (answer.option&.id == opt.id) %>
                        <% is_correct_answer = (answer.question.correct_option_id == opt.id) %>
                        <div class="flex items-center px-3 py-2 rounded-lg text-sm <%= is_correct_answer ? 'bg-green-50 border border-green-300' : is_user_answer ? 'bg-red-50 border border-red-300' : 'bg-gray-50 border border-gray-200' %>">
                          <% if is_correct_answer %>
                            <svg class="w-4 h-4 text-green-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                          <% elsif is_user_answer %>
                            <svg class="w-4 h-4 text-red-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                          <% else %>
                            <div class="w-4 h-4 rounded-full border-2 border-gray-300 mr-2 flex-shrink-0"></div>
                          <% end %>
                          <span class="<%= is_correct_answer ? 'text-green-800 font-medium' : is_user_answer ? 'text-red-800' : 'text-gray-700' %>">
                            <%= opt.content %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to quiz_path(@submission.quiz), class: "inline-flex items-center justify-center px-8 py-4 border-2 border-indigo-600 text-base font-medium rounded-xl text-indigo-600 bg-white hover:bg-indigo-50 transition-all shadow-sm hover:shadow-md" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Retake Quiz
      <% end %>
      
      <%= link_to quizzes_path, class: "inline-flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 transition-all shadow-md hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Browse More Quizzes
      <% end %>
    </div>

    <div class="text-center mt-8 text-sm text-gray-500">
      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Submitted <%= @submission.submitted_at.strftime('%B %d, %Y at %I:%M %p') %>
    </div>
  </div>
</div>
